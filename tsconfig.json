{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "/client*": ["client*"],
      "/server*": ["server*"],
    },
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "esnext", "dom"],
    "jsx": "react",
    "jsxFactory": "react.createElement",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": true
  },
  "include": [
    "client/**/*",
    "server/**/*"
  ]
}
