    "ignorePatterns": "webpack-*.ts",
    "rules": {
      "object-shorthand": "off",
      "quote-props": "off",
      "@typescript-eslint/no-namespace": "off"
    }
  },
  "nodemonConfig": {
    "watch": [
      "dist"
